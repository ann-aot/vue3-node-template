{
  "name": "vue3-node-pro-template",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "dev": "npm run -ws dev",
    "lint": "npm run -ws lint",
    "format": "npm run -ws format",
    "test": "npm run -ws test",
    "typecheck": "npm run -ws typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "vite-plugin-eslint": "^1.8.1",
  "rollup": "^4.43.0",
  "esbuild": "^0.25.0"
  },
  "overrides": {
    "glob": "^10",
    "rimraf": "3.0.2"
  },
  "lint-staged": {
    "**/*.{ts,vue,js,jsx,tsx,css,scss,md,json,yaml,yml}": [
      "prettier --write"
    ],
    "**/*.{ts,vue,js,jsx,tsx}": [
      "eslint --fix"
    ]
  }
}